daemonize(){
  while sleep 1s; do 
    set +e
    ./app
    echo "$(tail -n200 app.log)" > app.log
  done
}

start(){
  test -f .pid  && { print "stopping $PODI_APP"; silent try kill -15 $(cat .pid); }
  nohup ./podi daemonize $PODI_APP:$PORT &> app.log &
  echo $! > .pid
  print "started $PODI_APP [PID $(cat .pid)]"
}
